{
  "name": "social-microservice",
  "version": "1.0.0",
  "private": true,
  "description": "Simple social network microservice (posts, likes, comments) with in-memory storage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "microservice",
    "social",
    "posts",
    "likes",
    "comments",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.11.30",
    "@types/sinon": "^17.0.3",
    "@types/uuid": "^9.0.8",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.4.0",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  }
}
